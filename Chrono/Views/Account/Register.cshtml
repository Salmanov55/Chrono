@model RegistrationVM

<section>
    <div class="top">
        <div class="top_title">
            <h1 class="first_word">Create Account</h1>
            <a class="home" href="index.html">Home</a>
            <span>/</span>
            <span class="span_login">Create Account</span>
        </div>
    </div>
</section>

<section>
    <div class="login_panel">
        <div class="top_title">
            <h1 class="top_word">Registration</h1>
            <p class="create_accont">
                Don't have an account yet?
            </p>    
            <a href="login.html">Login</a>
        </div>
        <div style="color:red" asp-validation-summary="ModelOnly"></div>
        <form method="post">
            <div class="email-adres">
                <input asp-for="FullName" class="name" placeholder="Full Name" type="text">
                <span style="color:red" asp-validation-for="FullName"></span>
                <input asp-for="UserName" class="surname" placeholder="User Name" type="text">
                <span style="color:red" asp-validation-for="UserName"></span>
                <input asp-for="Email" class="email" placeholder="Email Adress" type="email">
                <span style="color:red" asp-validation-for="Email"></span>
                <input asp-for="Password" class="password" type="password" placeholder="Password">
                <span style="color:red" asp-validation-for="Password"></span>
                <input asp-for="RepeatPassword" class="password" type="password" placeholder=" Repeat password">
                <span style="color:red" asp-validation-for="RepeatPassword"></span>
            </div>
            <button type="submit">Sign up</button>
        </form>
    </div>
</section>

@section js {
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
    <script src="https://unpkg.com/boxicons@2.1.4/dist/boxicons.js"></script>
    <script src="~/Client/assets/js/login.js"></script>
}

@section css {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"/>
    <link href="https://fonts.googleapis.com/css2?family=Tajawal:wght@200;300;400;500;700;800;900&display=swap"rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Jura:wght@300..700&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="~/Client/assets/styles/css/bootstrap-grid.min.css">
    <link rel="stylesheet" href="~/Client/assets/styles/css/create.css">
}