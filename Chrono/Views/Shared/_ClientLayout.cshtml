
@inject Chrono.Services.LayoutService service



<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Frank+Ruhl+Libre:wght@300;400;500;600;700;800&family=Jura:wght@300;400;500;600;700&family=Montserrat:ital,wght@0,200;0,300;0,400;0,500;0,600;0,700;1,200;1,300;1,400;1,500;1,600&family=Poppins:ital,wght@0,400;0,500;0,600;0,700;1,300&family=Roboto+Mono:ital,wght@1,300&display=swap"
          rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />
    <link rel="stylesheet" href="~/Client/assets/styles/css/main.css">
    @RenderSection("css",required: false)
</head>

<body>

    <header>
        <div class="container-nav">
            <nav class="navigation">
                <a asp-action="index" asp-controller="home" class="logo">
                    <img src="~/Client/assets/img/logo.webp" alt="Logo" class="logo-img" />
                </a>
                <ul class="nav_menu">
                    <li class="nav_list">
                        <a asp-action="index" asp-controller="home" class="nav_link">
                            <span>Home</span>
                        </a>
                    </li>
                    <li class="nav_list nav_list_menu">
                        <a href="shop.html" class="nav_link">
                            <span>Shop</span>
                            <ion-icon name="chevron-down-outline"></ion-icon>
                        </a>
                        <div class="dropdown">
                            <div class="dropdown-inner">
                                @foreach (var item in await service.GetProductsNav())
                                {
                                    <div class="dropdown-item">
                                        <div class="item-list">
                                            <div class="item-img">
                                                <img style="width:100%" class="product-item-img"
                                                     src="~/Client/assets/img/@item.ProductImages.FirstOrDefault().ImageUrl"
                                                     alt="Icon" />
                                                <div class="item-list-info">
                                                    <a href="shop.html">
                                                        <span class="item-list-info-title">
                                                            @item.Name
                                                        </span>
                                                        <span class="item-list-info-price">@item.Price</span>
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </li>
                    <li class="nav_list">
                        <a asp-action="model" asp-controller="product" class="nav_link">
                            <span>Model</span>
                        </a>
                    </li>
                    <li class="nav_list">
                        <a asp-action="model" asp-controller="product" class="nav_link">
                            <span>Watch</span>
                        </a>
                    </li>
                    <li class="nav_list">
                        <a asp-action="model" asp-controller="product" class="nav_link">
                            <span>Brand</span>
                        </a>
                    </li>
                    <li class="nav_list nav_list_menu">
                        <a asp-action="model" asp-controller="product" class="nav_link">
                            <span>Pages</span>
                            <ion-icon name="chevron-down-outline"></ion-icon>
                        </a>
                        <div class="dropdown-pages">
                            <div class="dropdown-pages-inner">
                                <div class="dropdown-pages-item">
                                    <div class="item-list">
                                        <div class="item-img">
                                            <div class="item-list-info-pages">
                                                <ul>
                                                    <li><a href="#">About</a></li>
                                                    <li><a asp-action="index" asp-controller="blog">Blog</a></li>
                                                    <li><a href="#">Faq</a></li>
                                                    <li><a href="#">Contact Us</a></li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </li>
                </ul>
                <div class="nav_action">
                    @{
                        if (User.Identity.IsAuthenticated)
                        {
                            <a asp-controller="account" asp-action="logout" class="nav-link"><span>@await service.GetUserName()</span> Log Out</a>
                        }
                    }
                    <a href=""><i class="fa-solid fa-cart-shopping"></i></a>
                    <a asp-action="login" asp-controller="account"><i class="fa-solid fa-user"></i></a>
                    <a href=""><i class="fa-solid fa-magnifying-glass"></i></a>
                    <div class="nav_toggle">
                        <ion-icon name="menu-outline"></ion-icon>
                    </div>
                </div>
            </nav>
        </div>
    </header>

    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <footer>
        <div class="footer-area">
            <div class="footer-content">
                <div class="information">
                    <div class="footer-block">
                        <h2 class="top-title">Information</h2>
                        <ul class="footer-list">
                            <li><a href="">Search</a></li>
                            <li><a href="">Help</a></li>
                            <li><a href="">Shipping Details</a></li>
                            <li><a href="">Privacy Policy</a></li>
                            <li><a href="">Information</a></li>
                        </ul>
                    </div>
                    <div class="footer-block">
                        <h2 class="top-title">My Account</h2>
                        <ul class="footer-list">
                            <li><a href="">Contact Us</a></li>
                            <li><a href="">About Us</a></li>
                            <li><a href="">Careers</a></li>
                            <li><a href="">Return Centre</a></li>
                            <li><a href="">Deliveries</a></li>
                        </ul>
                    </div>
                    <div class="footer-block">
                        <h2 class="top-title">Help</h2>
                        <ul class="footer-list">
                            <li><a href="">Search Terms</a></li>
                            <li><a href="">Advanced Search</a></li>
                            <li><a href="">Help & FAQs</a></li>
                            <li><a href="">Store Locations</a></li>
                            <li><a href="">Orders and Returns</a></li>
                        </ul>
                    </div>
                    <div class="footer-block">
                        <h2 class="top-title">Watches</h2>
                        <ul class="footer-list">
                            <li><a href="">Hirzono Watch</a></li>
                            <li><a href="">Giordana Watch</a></li>
                            <li><a href="">Romex Watch</a></li>
                            <li><a href="">Smart Watch</a></li>
                            <li><a href="">Phlippe Watches</a></li>
                        </ul>
                    </div>
                    <div class="footer-block">
                        <h2 class="top-title">Support</h2>
                        <ul class="footer-list">
                            <li><a href="">Chat Support</a></li>
                            <li><a href="">E-Mail Support</a></li>
                            <li><a href="">24/7 Support</a></li>
                            <li><a href="">Customer Stories</a></li>
                            <li><a href="">Terms of Use</a></li>
                        </ul>
                    </div>
                </div>
                <div class="footer-icons">
                    <div class="footer-blocks">
                        <a href="index.html"><img src="~/Client/assets/img/logo.webp" alt="logo"></a>
                        <ul class="icons">
                            <li><a href="#!"><i class="fa-brands fa-twitter"></i></a></li>
                            <li><a href="#!"><i class="fa-brands fa-facebook-f"></i></a></li>
                            <li><a href="#!"><i class="fa-brands fa-pinterest"></i></a></li>
                            <li><a href="#!"><i class="fa-brands fa-instagram"></i></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </footer>




    @RenderSection("js", required: false)
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
    <script src="https://unpkg.com/boxicons@2.1.4/dist/boxicons.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
    

</body>
</html>

